<h3>Form to create new user / Register here</h3>

<form action="/users" method="post">

  <div class="form-group">
    <label>Name
      <input type="text" name="user[name]">
    </label>
  </div>

  <div class="form-group">
    <label>Address
      <input type="text" name="user[address]">
    </label>
  </div>


  <div class="form-group">
    <label>Email Address
      <input type="text" name="user[email_address]">
    </label>
  </div>

  <div class="form-group">
    <label>Nationality
      <input type="text" name="user[nationality]">
    </label>
  </div>


  <input type="submit" value="submit">
</form>
